{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "cross-env NODE_ENV=test RATE_LIMIT_ENABLED=false mocha \"test/**/*.test.js\"",
    "test:watch": "cross-env NODE_ENV=test RATE_LIMIT_ENABLED=false mocha --watch \"test/**/*.test.js\"",
    "test:coverage": "cross-env NODE_ENV=test RATE_LIMIT_ENABLED=false nyc mocha \"test/**/*.test.js\"",
    "test:coverage:report": "nyc report --reporter=html --reporter=text --reporter=lcov",
    "test:unit": "cross-env NODE_ENV=test mocha \"test/unit/**/*.test.js\"",
    "test:integration": "cross-env NODE_ENV=test RATE_LIMIT_ENABLED=false mocha \"test/integration/**/*.test.js\"",
    "test:e2e": "cross-env NODE_ENV=test RATE_LIMIT_ENABLED=false mocha \"test/e2e/**/*.test.js\"",
    "test:api": "cross-env NODE_ENV=test RUN_API_TESTS=true RATE_LIMIT_ENABLED=false mocha \"test/api/**/*.test.js\"",
    "test:performance": "cross-env NODE_ENV=test node test/performance/loadTest.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:api && npm run test:e2e",
    "test:fast": "cross-env NODE_ENV=test RATE_LIMIT_ENABLED=false mocha \"test/unit/**/*.test.js\" \"test/integration/**/*.test.js\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "setup": "node ../scripts/setup.js",
    "db:init": "node ../databse/init.js",
    "db:seed": "node ../databse/seed.js",
    "db:clear": "node ../databse/seed.js clear",
    "alerts": "node ../scripts/sendAlerts.js alerts",
    "digest": "node ../scripts/sendAlerts.js digest",
    "breach:check": "node ../scripts/dailyBreachCheck.js",
    "test:notification": "node ../scripts/sendAlerts.js test",
    "coverage:clean": "rimraf coverage",
    "coverage:badge": "make-coverage-badge --output-path ./coverage/badge.svg"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.9",
    "bcryptjs": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.10.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "prom-client": "^15.1.3",
    "winston": "^3.17.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "chai": "^5.2.0",
    "chai-http": "^5.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.20.1",
    "make-coverage-badge": "^1.2.0",
    "mocha": "^11.7.1",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.1.9",
    "nyc": "^17.1.0",
    "rimraf": "^6.0.1",
    "sinon": "^21.0.0",
    "supertest": "^7.0.0",
    "twilio": "^5.7.2"
  },
  "description": ""
}